<%= form_with(model: @article, local: true) do |form| %>

<%if @article.errors.any? %>
	<div id="error explanation">
		<h2>
		<%= pluralize(@article.errors.count,"error") %>
		prohibited this error from editing
		</h2>

		<ul>
			
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
